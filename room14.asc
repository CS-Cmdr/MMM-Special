			Wait(5);
      player.Say("Da ist nichts zum Öffnen.");
		}
    		else if (UsedAction(eActClose))
		{
			Wait(5);
      player.Say("Das geht nicht.");
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
      player.Say("Der ist mir zu schwer.");
		}
