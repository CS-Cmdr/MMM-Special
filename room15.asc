    {
      if(kerze_in_mikrowelle)
      {
        //TODO GUI aus
        Wait(100); 
        PlaySound(90);
        Wait(20);
        //TODO GUI an
        g1_kerzeStatus = 1;
      }
      else player.Say("Wozu? Die Mikrowelle ist leer!");
    }
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Damit es herunter fällt?");
		}
    else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			player.Say("Die Mikrowelle ist zu.");
		}
		else Unhandled();
	}
}

