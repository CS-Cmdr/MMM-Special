    if(UsedAction(eActPickUp))
    {
      nimm(oKerzeKuehl, iKerze);
      kerze_in_kuehlschrank = false;
    }
    else if(UsedAction(eActLookAt))
    {
      player.Say("Die ist aus Wachs.");
    }
    else Unhandled();
  }
}

